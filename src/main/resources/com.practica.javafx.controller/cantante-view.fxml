<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.practica.javafx.controller.CantantesController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Gestión de Cantantes">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
            <TableView fx:id="tablaCantantes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                    <TableColumn fx:id="colApellido" prefWidth="120.0" text="Apellido" />
                    <TableColumn fx:id="colNombreArtistico" prefWidth="150.0" text="Nombre Artístico" />
                    <TableColumn fx:id="colFechaNacimiento" prefWidth="120.0" text="Nacimiento" />
                    <TableColumn fx:id="colGenero" prefWidth="100.0" text="Género" />
                    <TableColumn fx:id="colEdadCalculada" prefWidth="80.0" text="Edad" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="btnNuevo" onAction="#handleNuevoCantante" text="Nuevo" />
                <Button fx:id="btnEditar" onAction="#handleEditarCantante" text="Editar" />
                <Button fx:id="btnEliminar" onAction="#handleEliminarCantante" text="Eliminar" />
                <Button fx:id="btnGestionarCanciones" onAction="#handleGestionarCanciones" text="Gestionar Canciones (1:N)" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnVolver" onAction="#handleVolver" text="Volver al Panel Principal" />
        </HBox>
    </bottom>
</BorderPane>