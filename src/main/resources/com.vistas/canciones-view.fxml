<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.practica.javafx.controller.CancionesController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Gestión de Canciones para:">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Label fx:id="lblNombreCantante" text="[Nombre del Cantante]" style="-fx-font-style: italic;" />
        </VBox>
    </top>
    <center>
        <HBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <Label text="Lista de Canciones" style="-fx-font-weight: bold;" />
                <TableView fx:id="tablaCanciones" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colTitulo" prefWidth="200.0" text="Título" />
                        <TableColumn fx:id="colDuracion" prefWidth="100.0" text="Duración (s)" />
                        <TableColumn fx:id="colAnho" prefWidth="80.0" text="Año" />
                        <TableColumn fx:id="colDuracionMinutos" prefWidth="100.0" text="Duración (m:s)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox spacing="10.0">
                    <Button fx:id="btnNuevo" onAction="#handleNuevo" text="Nuevo" />
                    <Button fx:id="btnEditar" onAction="#handleEditar" text="Editar" />
                    <Button fx:id="btnEliminar" onAction="#handleEliminar" text="Eliminar" />
                </HBox>
            </VBox>

            <VBox fx:id="formPanel" spacing="10.0" maxWidth="300.0" prefWidth="300.0">
                <Label text="Detalles de la Canción" style="-fx-font-weight: bold;" />
                <GridPane hgap="10.0" vgap="10.0">
                    <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="tfTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Duración (segundos):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="tfDuracion" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Año Lanzamiento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="tfAnho" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </GridPane>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button fx:id="btnGuardar" onAction="#handleGuardar" text="Guardar" />
                    <Button fx:id="btnCancelar" onAction="#handleCancelar" text="Cancelar" />
                </HBox>
                <VBox spacing="5.0">
                    <Label text="Opciones de Publicación (Futura Tarea):" />
                </VBox>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <Button fx:id="btnVolver" onAction="#handleVolver" text="&lt;&lt; Volver a Cantantes" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>